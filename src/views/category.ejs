<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/db57439ce1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css" />
</head>

<body class="bg-white">
    <%- include('component/top-navbar.ejs') %>

        <!-- Search Section -->
        <div class="bg-[#f4f4f4] pt-24 pb-12">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 text-center mb-6">What are you looking for?</h1>
            <form action="/search" method="GET"
                class="max-w-md mx-auto flex items-center rounded-full overflow-hidden border border-blue-300 bg-white shadow-sm">
                <input type="text" name="q" placeholder="Search"
                    class="flex-grow px-4 py-2 text-sm sm:text-base focus:outline-none" />
                <button type="submit"
                    class="h-full px-5 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold text-sm sm:text-base transition">
                    Search
                </button>
            </form>
        </div>

        <!-- Category Section -->
        <div class="bg-[#fefcf6] pt-10 pb-32 min-h-screen">
            <h2 class="text-xl font-semibold text-center mb-6">Explore categories</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 px-4 sm:px-10 lg:px-24">

                <!-- Phones -->
                <div class="bg-white rounded-xl overflow-hidden shadow border">
                    <div class="bg-yellow-200 p-4 flex items-center gap-2">
                        <i class="fas fa-mobile-alt text-xl text-gray-700"></i>
                        <h3 class="text-lg font-bold text-gray-800">Phones</h3>
                    </div>
                    <ul class="px-4 py-3 space-y-2 text-base text-gray-700">
                        <li>
                            <button onclick="toggleDropdown('iphoneDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>iPhone</span>
                            </button>
                            <ul id="iphoneDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="/product?item=iphone-16-pro-max" class="hover:text-indigo-500">iPhone 16
                                        Pro Max</a></li>
                                <li><a href="/product?item=iphone-15-pro" class="hover:text-indigo-500">iPhone 15
                                        Pro</a></li>
                                <li><a href="/product?item=iphone-14" class="hover:text-indigo-500">iPhone 14</a></li>
                                <li><a href="/product?item=iphone-se" class="hover:text-indigo-500">iPhone SE</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('androidDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Android</span>
                            </button>
                            <ul id="androidDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">Samsung Galaxy</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Google Pixel</a></li>
                                <li><a href="#" class="hover:text-indigo-500">OnePlus</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('accessoriesDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Accessories</span>
                            </button>
                            <ul id="accessoriesDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">Chargers</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Cases</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Screen Protectors</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Computers -->
                <div class="bg-white rounded-xl overflow-hidden shadow border">
                    <div class="bg-pink-200 p-4 flex items-center gap-2">
                        <i class="fas fa-laptop text-xl text-gray-700"></i>
                        <h3 class="text-lg font-bold text-gray-800">Computers</h3>
                    </div>
                    <ul class="px-4 py-3 space-y-2 text-base text-gray-700">
                        <li>
                            <button onclick="toggleDropdown('laptopsDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Laptops</span>
                            </button>
                            <ul id="laptopsDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">MacBook</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Dell XPS</a></li>
                                <li><a href="#" class="hover:text-indigo-500">HP Spectre</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('desktopsDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Desktops</span>
                            </button>
                            <ul id="desktopsDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">iMac</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Gaming PC</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Workstation</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('tabletsDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Tablets</span>
                            </button>
                            <ul id="tabletsDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">iPad</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Samsung Galaxy Tab</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Photography -->
                <div class="bg-white rounded-xl overflow-hidden shadow border">
                    <div class="bg-green-100 p-4 flex items-center gap-2">
                        <i class="fas fa-camera text-xl text-gray-700"></i>
                        <h3 class="text-lg font-bold text-gray-800">Photography</h3>
                    </div>
                    <ul class="px-4 py-3 space-y-2 text-base text-gray-700">
                        <li>
                            <button onclick="toggleDropdown('camerasDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Cameras</span>
                            </button>
                            <ul id="camerasDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">Canon</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Sony</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Nikon</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Leica</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Panasonic</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Drones -->
                <div class="bg-white rounded-xl overflow-hidden shadow border">
                    <div class="bg-red-100 p-4 flex items-center gap-2">
                        <i class="fas fa-helicopter text-xl text-gray-700"></i>
                        <h3 class="text-lg font-bold text-gray-800">Drones</h3>
                    </div>
                    <ul class="px-4 py-3 space-y-2 text-base text-gray-700">
                        <li>
                            <button onclick="toggleDropdown('quadcoptersDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Quadcopters</span>
                            </button>
                            <ul id="quadcoptersDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">DJI Mini 3 Pro</a></li>
                                <li><a href="#" class="hover:text-indigo-500">DJI Air 2S</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Autel Evo Lite+</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('fpvDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>FPV</span>
                            </button>
                            <ul id="fpvDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">DJI Avata</a></li>
                                <li><a href="#" class="hover:text-indigo-500">BetaFPV Pavo30</a></li>
                                <li><a href="#" class="hover:text-indigo-500">iFlight Nazgul</a></li>
                            </ul>
                        </li>
                        <li>
                            <button onclick="toggleDropdown('droneAccessoriesDropdown', this)"
                                class="flex items-center gap-2 text-gray-800 focus:outline-none">
                                <i class="fas fa-chevron-right text-xs transition-transform duration-200"></i>
                                <span>Accessories</span>
                            </button>
                            <ul id="droneAccessoriesDropdown" class="ml-6 mt-2 space-y-1 hidden text-sm text-gray-600">
                                <li><a href="#" class="hover:text-indigo-500">Extra Batteries</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Carrying Cases</a></li>
                                <li><a href="#" class="hover:text-indigo-500">Propeller Guards</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        </div>

        <%- include('component/bottom-navbar.ejs') %>

            <script>
                function toggleDropdown(id, btn) {
                    const el = document.getElementById(id);
                    el.classList.toggle('hidden');
                    const icon = btn.querySelector('i');
                    icon.classList.toggle('rotate-90');
                }
            </script>
    <script src="/script/profile-dropdown.js"></script>
</body>

</html>