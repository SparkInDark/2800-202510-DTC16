<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/db57439ce1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css" />
</head>

<body class="bg-gray-50 text-gray-800">
    <!-- Top Navbar -->
    <%- include('component/top-navbar.ejs') %>

        <!-- Search Section -->
        <section class="bg-white pt-32 pb-16 shadow">
            <div class="max-w-3xl mx-auto px-4 text-center">
                <h1 class="text-4xl font-extrabold text-gray-900 mb-4">What are you looking for?</h1>
                <form action="/search" method="GET"
                    class="flex items-center rounded-full overflow-hidden border border-blue-300 bg-white shadow-md">
                    <input type="text" name="q" placeholder="Search"
                        class="flex-grow px-6 py-3 text-lg focus:outline-none" />
                    <button type="submit"
                        class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-lg transition-colors">
                        <i class="fas fa-search mr-2"></i>Search
                    </button>
                </form>
            </div>
        </section>

        <!-- 手写 Accordion Grid -->
        <section class="max-w-6xl mx-auto px-4 py-12">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 items-start">
                <% categories.forEach(function(category, idx) { %>
                    <div class="bg-white rounded-xl shadow hover:shadow-lg transition-shadow p-6">
                        <!-- 标题按钮 -->
                        <button type="button" class="w-full flex items-center justify-between focus:outline-none"
                            data-target="panel-<%= idx %>">
                            <div class="flex items-center">
                                <i class="fas fa-tags text-blue-500 text-2xl mr-3"></i>
                                <span class="text-2xl font-bold">
                                    <%= category.name %>
                                </span>
                            </div>
                            <i id="icon-<%= idx %>"
                                class="fas fa-chevron-down text-gray-400 transition-transform duration-200"></i>
                        </button>

                        <!-- 隐藏面板 -->
                        <div id="panel-<%= idx %>" class="mt-4 hidden">
                            <p class="text-gray-600 mb-6">
                                <%= category.description %>
                            </p>

                            <% if (category.products.length> 0) { %>
                                <ul class="space-y-4">
                                    <% category.products.forEach(function(product) { %>
                                        <li>
                                            <a href="/product/<%= product.slug %>"
                                                class="flex items-start p-3 hover:bg-gray-100 rounded transition">
                                                <i class="fas fa-box-open text-gray-400 text-xl mt-1 mr-3"></i>
                                                <div>
                                                    <strong class="block text-lg text-gray-900">
                                                        <%= product.name %>
                                                    </strong>
                                                    <p class="text-sm text-gray-600">
                                                        Average Rating:
                                                        <span class="font-semibold">
                                                            <%= product.rating_summary.average %>
                                                        </span>
                                                    </p>
                                                </div>
                                            </a>
                                        </li>
                                        <% }); %>
                                </ul>
                                <% } else { %>
                                    <p class="text-gray-500 italic">No products in this category.</p>
                                    <% } %>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </section>

        <!-- Bottom Navbar -->
        <%- include('component/bottom-navbar.ejs') %>

            <!-- 切换脚本 -->
            <script>
                document.querySelectorAll('button[data-target]').forEach(btn => {
                    const panel = document.getElementById(btn.dataset.target);
                    const icon = document.getElementById('icon-' + btn.dataset.target.split('-')[1]);
                    btn.addEventListener('click', () => {
                        panel.classList.toggle('hidden');
                        icon.classList.toggle('rotate-180');
                    });
                });
            </script>
</body>

</html>